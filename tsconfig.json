{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],  
    "allowJs": true,                                      
    "jsx": "react-jsx",                                
    "noEmit": true,
    "strict": true,              
    "moduleResolution": "node",                                          
    "resolveJsonModule": true,  
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                                    
    "isolatedModules": true,                          
    "esModuleInterop": true,                                                     
    "forceConsistentCasingInFileNames": true,                                   
  },
  "include": ["src"]
}
